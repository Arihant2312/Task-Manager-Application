<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheet/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body>
    <div class="main w-full min-h-screen bg-neutral-950">
        <!-- Form Section -->
         <div class="text-orange-800 text-5xl text-center p-10 tracking-tighter font-bold "><h1>Welcome to Task Manager</h1></div>
        <div class="form p-12 text-white">
            <form action="/create" method="post">
                <input 
                    class="w-full rounded-md block px-5 py-3 bg-zinc-800" 
                    type="text" 
                    placeholder="Title goes here" 
                    name="title"
                    required>
                <textarea 
                    class="w-full rounded-md block px-5 py-3 mt-2 resize-none bg-zinc-800" 
                    placeholder="Write your task details here" 
                    name="details"
                    required></textarea>
                <input 
                    class="mt-5 bg-blue-800 px-5 py-2 rounded-md text-white" 
                    type="submit" 
                    value="Create Task">
            </form>
        </div>

        <!-- Task Display Section -->
        <div class="tasks flex gap-3 flex-wrap p-10">
            <% if (files.length > 0) { %>
                <% files.forEach(function(value) { %>
                    <div class="task w-72 px-3 py-5 mt-0 rounded-md bg-zinc-700">
                        <h1 class="text-white text-3xl tracking-tighter mb-3"><%= value %></h1>
                       <div class="flex justify-between w-full mt-5" >
                        <a 
                        class="text-blue-500 inline-block " 
                        href="/files/<%=value%>">Read More</a>
                        <a href="/edit/<%=value%>"  class="text-orange-500">Edit</a>
                       </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="text-white text-lg">No tasks available. Start by creating one!</p>
            <% } %>
        </div>
    </div>
</body>
</html>
